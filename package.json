{
  "name": "fortifyjs",
  "version": "0.1.0",
  "description": "TypeScript guardrails for reliable frontend apps.",
  "license": "MIT",
  "author": "Aneta Takucheva",
  "repository": "github:ankova/fortifyjs",
  "homepage": "https://github.com/ankova/fortifyjs",
  "bugs": {
    "url": "https://github.com/ankova/fortifyjs/issues"
  },
  "type": "module",
  "private": true,
  "packageManager": "pnpm@9.12.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --filter @fortifyjs/react dev",
    "build": "pnpm -r --filter ./packages/* run build",
    "test": "pnpm -r --filter ./packages/* run test",
    "coverage": "pnpm -r --filter ./packages/* run coverage",
    "lint": "eslint .",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "typecheck": "tsc -p tsconfig.base.json --noEmit",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "publish-packages": "changeset publish",
    "release": "pnpm version-packages && pnpm i --lockfile-only && pnpm -r --filter ./packages/* run build && pnpm publish-packages",
    "prepare": "husky install",
    "ci": "pnpm lint && pnpm format:check && pnpm typecheck && pnpm test && pnpm build"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.11",
    "@eslint/js": "^9.14.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.7.0",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "c8": "^10.1.3",
    "eslint": "^9.11.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "husky": "^8.0.0",
    "jsdom": "^27.2.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "tsup": "^8.3.0",
    "tsx": "^4.20.6",
    "typescript": "^5.6.3",
    "vitest": "^2.1.9"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "typescript",
    "react",
    "safety",
    "async",
    "feature-flags"
  ],
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md}": [
      "prettier -w"
    ]
  }
}
