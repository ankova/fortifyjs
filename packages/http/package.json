{
  "name": "@fortifyjs/http",
  "version": "0.0.1",
  "description": "Typed HTTP client with schema validation, retries, and safe error handling.",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "test": "vitest --run"
  },
  "dependencies": {
    "zod": "^3.23.8"
  },
  "peerDependencies": {
    "@fortifyjs/core": "workspace:*"
  },
  "devDependencies": {
    "@fortifyjs/core": "workspace:*",
    "tsup": "^8.3.0",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4"
  },
  "license": "MIT"
}
